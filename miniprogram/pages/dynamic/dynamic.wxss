.layout{
  width: 100%;
}
/* title */
.title{
  width: 94%;
  height: 35px;
  line-height: 35px;
  text-align: center;
  font-size: 14px;
  color: black;
}
.banner{
  width: 94%;
  margin: 0 auto;

}
.banner swiper{  /* 如果swiper-item不设置下面两个角不会被切*/
  width: 100%;
  border-radius: 15px;
}

.banner swiper-item{  /* 如果swiper-item不设置下面两个角不会被切*/
  width: 100%;
  border-radius: 15px;
}

.banner image{  /* 如果swiper-item不设置下面两个角不会被切*/
  width: 100%;
  border-radius: 15px;
}
