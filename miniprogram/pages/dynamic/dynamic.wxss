/* items */
.items{
  width: 94%;
  margin: 0 auto;
}
  
.item{
  width: 100%;
  margin-top: 20px;
}
/* 分类名称-线 */
.line-clname{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  border: none;
}

.line-one{
  width: 10%;
  height: 1px;
  background-color: black;
  border: 0px;
}
.line-two{
  width: 60%;
  height: 1px;
  background-color: black;
}


.item-title{
  font-size: 18px;
  font-family: "方正清刻本悦宋简体";
  width: 30%;
  
}
/* 图片 */
.img-wraper{
  margin-top: 3px;
}

.img-wraper image{
  border-radius: 5px;
}
