.layout{
  width: 100%;
}
/* title分类标题 */
.title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  padding-top: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.title .circle{
  height: 30px;
  width: 85px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.title .circle text{
  border-radius: 50%;
  border: 1px solid; 
}

.title .circle .one{
  width: 12px;
  height: 12px;
}

.title .circle .two{
  width: 7px;
  height: 7px;
}

.title .circle .three{
  width: 4px;
  height: 4px;
}
/* font 标题名 */
.title .font{
  margin: 0 5px;
}


.content{
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
}

.cover_img{
  width: 100%;
  margin-bottom: 25px;
}

.cover_img image{
  width: 100%;
  border-radius: 15px;
}

.name{
  width: 100%;
  color:#000;
  height: 30px;
  font-size: 14px;
  margin: 0 auto;
  margin-top: 20px;
  position: relative;

}

.name view{

  height: 20px;
  line-height: 20px;
}

.name .left{
  position: absolute;
  left: 8px;
}

.name .right{
  position: absolute;
  right: 0px;
  font-size: 10px;
  color: gray;
  height: 20px;
  line-height: 20px;
}
.name .right .symbol{
  font-size: 14px;
  display: inline-block;
 
}

/* bottom */
.bottom{
  width:100%;
  height: 20px;
  line-height: 20px;
  text-align: center;
  font-size: 10px;
  color: gray;
  padding-bottom: 5px;
}